{
    "telemetry.telemetryLevel": "off",
    "editor.fontFamily": "FiraCode Nerd Font Mono",
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.bracketPairColorization.enabled": true,
    "editor.wordWrap": "off",
    "editor.detectIndentation": true,
    "editor.mouseWheelZoom": true,
    "editor.inlineSuggest.enabled": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 30,
    "editor.stickyTabStops": true,
    "editor.fontWeight": "normal",
    "window.titleBarStyle": "custom",

    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorTheme": "GitHub Dark",
    "workbench.layoutControl.enabled": true,
    "workbench.sideBar.location": "right",

    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    "discord.detailsIdling": "Check out my website!",
    "discord.lowerDetailsEditing": "üìÅ Workspace: {workspace}",
    "discord.lowerDetailsDebugging": "",
    "discord.largeImageIdling": "Idling...",
    "discord.lowerDetailsIdling": "d3r1n.com",
    "discord.detailsEditing": "‚úèÔ∏è Editing: {file_name}",
    "discord.idleTimeout": 900,

    "terminal.integrated.gpuAcceleration": "on",

    "git.decorations.enabled": false,
    "git.enableStatusBarSync": false,

    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true,
        "rust": true
    },

    "liveshare.presence": true,

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // VSCodeVim settings
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
    ],
    "vim.handleKeys": {
      "<C-f>": false,
    },

    // Language specific settings
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[vue]": {
        "editor.defaultFormatter": "Vue.volar"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html"
    },
    "window.zoomLevel": 1,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "svelte.enable-ts-plugin": true,
    "git.openRepositoryInParentFolders": "never"
}